---
import {
    Terminal,
    Cpu,
    Wifi,
    Youtube,
    Podcast,
    Play,
    X,
    Apple,
} from "lucide-react";

interface Props {
    latestEpisodeUrl?: string;
}

const { latestEpisodeUrl } = Astro.props;
---

<section
    class="relative min-h-[60vh] flex items-center justify-center border-b border-gray-800 bg-[#050505] z-20"
>
    <!-- Background Grid -->
    <div
        class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:24px_24px]"
    >
    </div>

    <div class="container mx-auto px-4 z-10 relative">
        <div class="max-w-4xl mx-auto">
            <!-- Status Bar -->
            <div
                class="flex items-center gap-4 mb-8 text-xs font-mono text-gray-500 border border-gray-800 inline-flex px-3 py-1 rounded bg-black/50 backdrop-blur"
            >
                <span class="flex items-center gap-1.5 text-green-500">
                    <span class="relative flex h-2 w-2">
                        <span
                            class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"
                        ></span>
                        <span
                            class="relative inline-flex rounded-full h-2 w-2 bg-green-500"
                        ></span>
                    </span>
                    SYSTEM_AKTIV
                </span>
                <span>|</span>
                <span class="flex items-center gap-1.5">
                    <Cpu className="w-3 h-3" />
                    V1.0.0
                </span>
                <span>|</span>
                <span class="flex items-center gap-1.5">
                    <Wifi className="w-3 h-3" />
                    SIGNAL_STARK
                </span>
            </div>

            <!-- Main Title -->
            <h1
                class="text-6xl md:text-8xl font-bold font-display tracking-tighter text-white mb-6 uppercase"
            >
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-gray-100 to-gray-400"
                >
                    DIE
                </span>
                <br />
                <span
                    class="text-transparent bg-clip-text bg-gradient-to-r from-[var(--color-electric-blue)] to-[var(--color-neon-green)] typing-effect"
                >
                    NERD_SHOW_
                </span>
            </h1>

            <p
                class="text-xl text-gray-400 font-mono mb-10 max-w-2xl border-l-2 border-green-500 pl-4"
            >
                Deep Dives in KI, Krypto, Chips & Globale Märkte.
                <br />
                <span class="text-gray-600 text-sm"
                    >>> Wir haben das durchdrungen, damit du es nicht musst.</span
                >
            </p>

            <!-- CTA Buttons -->
            <div class="flex flex-wrap gap-4 items-center">
                <!-- Playback Button / Player -->
                <div
                    class="playback-container relative h-12 w-[240px]"
                    data-url={latestEpisodeUrl}
                >
                    <button
                        id="play-button"
                        class="absolute inset-0 w-full h-full px-6 bg-[var(--color-electric-blue)] text-white font-mono rounded hover:bg-blue-600 transition-colors flex items-center justify-center gap-2 z-10"
                    >
                        <Play className="w-4 h-4" />
                        PLAYBACK_STARTEN()
                    </button>
                    <!-- Audio player masked to button shape/size -->
                    <audio
                        id="audio-player"
                        class="hidden absolute inset-0 w-full h-full opacity-90 rounded bg-gray-900 object-cover"
                        controls
                        style="width: 100%; height: 100%;"></audio>
                </div>

                <!-- YouTube Button -->
                <a
                    href="https://www.youtube.com/@DieNerdShow"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="h-12 px-6 bg-[#FF0000] text-white font-mono rounded hover:bg-red-700 transition-colors flex items-center gap-2"
                >
                    <Youtube className="w-4 h-4" />
                    YOUTUBE_KANAL
                </a>

                <!-- Subscribe Dropdown -->
                <div class="relative z-50">
                    <button
                        id="subscribe-trigger"
                        class="h-12 px-6 bg-gray-800 text-white font-mono rounded hover:bg-gray-700 transition-colors flex items-center gap-2 border border-gray-700"
                    >
                        <Podcast className="w-4 h-4" />
                        ABONNIEREN
                    </button>

                    <!-- Popover Menu -->
                    <div
                        id="subscribe-menu"
                        class="hidden absolute top-full left-0 mt-2 w-64 bg-[#0a0a0a] border border-[var(--color-neon-green)] rounded-lg p-4 shadow-[0_0_30px_rgba(34,197,94,0.1)] opacity-0 transform scale-95 transition-all duration-200"
                    >
                        <div class="flex justify-between items-center mb-3">
                            <h3
                                class="text-sm font-bold text-white font-display"
                            >
                                MATRIX_WÄHLEN
                            </h3>
                            <button
                                id="close-menu"
                                class="text-gray-500 hover:text-white transition-colors"
                            >
                                <X className="w-4 h-4" />
                            </button>
                        </div>

                        <div class="space-y-2">
                            <a
                                href="https://podcasts.apple.com/us/podcast/die-nerd-show/id1539169863"
                                target="_blank"
                                class="flex items-center gap-3 p-3 bg-gray-900 rounded hover:bg-gray-800 border border-gray-800 hover:border-gray-600 transition-all group"
                            >
                                <Podcast className="w-4 h-4 text-purple-400" />
                                <span
                                    class="text-sm text-gray-300 group-hover:text-white"
                                    >Apple Podcasts</span
                                >
                            </a>
                            <a
                                href="https://open.spotify.com/search/Die%20Nerd%20Show"
                                target="_blank"
                                class="flex items-center gap-3 p-3 bg-gray-900 rounded hover:bg-gray-800 border border-gray-800 hover:border-gray-600 transition-all group"
                            >
                                <Wifi className="w-4 h-4 text-green-500" />
                                <span
                                    class="text-sm text-gray-300 group-hover:text-white"
                                    >Spotify</span
                                >
                            </a>
                            <a
                                href="https://interesse.podigee.io/feed/mp3"
                                target="_blank"
                                class="flex items-center gap-3 p-3 bg-gray-900 rounded hover:bg-gray-800 border border-gray-800 hover:border-gray-600 transition-all group"
                            >
                                <Terminal className="w-4 h-4 text-orange-400" />
                                <span
                                    class="text-sm text-gray-300 group-hover:text-white"
                                    >RSS Feed</span
                                >
                            </a>
                        </div>
                    </div>
                </div>

                <!-- View Agents Button -->
                <a
                    href="#hosts"
                    class="h-12 px-6 border border-gray-700 text-gray-300 font-mono rounded hover:border-[var(--color-neon-green)] hover:text-[var(--color-neon-green)] transition-all bg-black/50 backdrop-blur flex items-center"
                >
                    AGENTEN_ANSEHEN
                </a>
            </div>
        </div>
    </div>
</section>

<script>
    // Playback Logic
    const playButton = document.getElementById("play-button");
    const audioPlayer = document.getElementById(
        "audio-player",
    ) as HTMLAudioElement;
    const container = document.querySelector(
        ".playback-container",
    ) as HTMLElement;

    if (playButton && audioPlayer && container) {
        playButton.addEventListener("click", () => {
            const url = container.dataset.url;
            if (url) {
                audioPlayer.src = url;
                audioPlayer.classList.remove("hidden");
                playButton.classList.add("hidden");
                audioPlayer.play();
            } else {
                alert("Keine Episode gefunden.");
            }
        });
    }

    // Dropdown Logic
    const trigger = document.getElementById("subscribe-trigger");
    const menu = document.getElementById("subscribe-menu");
    const closeMenu = document.getElementById("close-menu");

    if (trigger && menu && closeMenu) {
        const toggleMenu = () => {
            if (menu.classList.contains("hidden")) {
                menu.classList.remove("hidden");
                // Small delay to allow display:block to apply before opacity transition
                requestAnimationFrame(() => {
                    menu.classList.remove("opacity-0", "scale-95");
                    menu.classList.add("opacity-100", "scale-100");
                });
            } else {
                menu.classList.remove("opacity-100", "scale-100");
                menu.classList.add("opacity-0", "scale-95");
                setTimeout(() => {
                    menu.classList.add("hidden");
                }, 200);
            }
        };

        trigger.addEventListener("click", (e) => {
            e.stopPropagation();
            toggleMenu();
        });

        closeMenu.addEventListener("click", (e) => {
            e.stopPropagation();
            toggleMenu();
        });

        // Close when clicking outside
        document.addEventListener("click", (e) => {
            if (
                !menu.contains(e.target as Node) &&
                !trigger.contains(e.target as Node) &&
                !menu.classList.contains("hidden")
            ) {
                toggleMenu();
            }
        });
    }
</script>

<style>
    .typing-effect {
        border-right: 0.15em solid var(--color-neon-green);
        animation: blink-caret 0.75s step-end infinite;
    }

    @keyframes blink-caret {
        from,
        to {
            border-color: transparent;
        }
        50% {
            border-color: var(--color-neon-green);
        }
    }

    /* Modal Animation */
    dialog[open] {
        animation: fade-in 0.2s ease-out;
    }

    @keyframes fade-in {
        from {
            opacity: 0;
            transform: scale(0.95);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>
